.box{
  padding: 0 26rpx;
}
.header{
  width: 100%;
  height: 400rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
}
.login{
  width: 150rpx;
  height: 70rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  line-height: 70rpx;
  margin: 100rpx auto;
}
.myInfo{
  width: 100%;
  height: 100%;
  padding-top:166rpx;
  align-items: center;
  text-align: center;
}
.headImg{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-left: 280rpx;
}
.headImg>image{
  width: 100%;
  height: 100%;
}
.mymessage{
  font-size: 24rpx;
  line-height: 50rpx;
}
.mymessage>.nickname{
  display: block;
  font-size: 40rpx;
}
.mymessage>.sex{
  margin-right: 30rpx;
}
.body>.edit{
  width: 100%;
  height: 120rpx;
  font-size: 32rpx;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  justify-content: space-between;
  align-items: center;
}